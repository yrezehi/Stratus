<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Static</title>

    <!-- Standard practices -->
    <link rel="manifest" href="site.webmanifest" asp-append-version="true" />

    <!-- Internal libraries -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- External libraries -->
    <!-- Note: File below is Tilwind's playground CDN -->
    <script src="~/lib/Tailwind/tailwind.js" asp-append-version="true"></script>
    <script src="~/lib/Normalize/normalize.js" asp-append-version="true"></script>

    <!-- Boilerplates -->
    <script src="~/boilerplate/boilerplate-main.css" asp-append-version="true"></script>

</head>
<body>

    <div class="wrapper-container">
        <header>
            Header
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer>
            <div>
                Footer
            </div>
        </footer>
    </div>

    <script src="~/js/binding.js" asp-append-version="true"></script>
    <script src="~/js/dom.js" asp-append-version="true"></script>
    <script src="~/js/fetch.js" asp-append-version="true"></script>
    <script src="~/js/loading.js" asp-append-version="true"></script>
    <script src="~/js/utility.js" asp-append-version="true"></script>
    <script src="~/js/confirm.js" asp-append-version="true"></script>
    <script src="~/js/exceptions.js" asp-append-version="true"></script>
    <script src="~/js/globals.js" asp-append-version="true"></script>
    <script src="~/js/notification.js" asp-append-version="true"></script>
    <script src="~/js/storage.js" asp-append-version="true"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
